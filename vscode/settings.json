{
  "workbench.colorTheme": "Solarized Dark",
  "editor.lineNumbers": "relative",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "w"],
      "commands": [":write"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":quit"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": [":only"]
    },
    {
      "before": ["<leader>", "x"],
      "commands": [":xit"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": [":registers"]
    }
  ],
  "vim.highlightedyank.enable": true,
  "vim.surround": true,
  "vim.leader": "<space>",
  "vim.sneak": false,
  "editor.formatOnSave": true,
  "git.autofetch": true
}

